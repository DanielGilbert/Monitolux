<Application x:Class="Monitolux.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vml="clr-namespace:Monitolux.ViewModel.Locator"
             xmlns:local="clr-namespace:Monitolux"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <vml:MonitoluxViewModelLocator x:Key="MonitoluxViewModelLocator" MonitoluxContainer="{Binding MonitoluxContainer, Mode=OneWay, Source={x:Static Application.Current}}" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
